@page "/employeedetails/{id}"
@page "/employeedetails"
@inherits EmployeeDetailsBase


@if (Employee == null)
{
    <div class="spinner"></div>    
}
else
{
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Employee.FirstName @Employee.LastName @Coordinates</h1> 
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@Employee.PhotoPath" @onmousemove=@(e => Coordinates = $"X = {e.ClientX} Y = {e.ClientY}")/>
                <h4>Employee ID: @Employee.Id</h4>
                <h4>Email: @Employee.Email</h4>
                <h4>Department: @(Employee.Department == null ? "N/A" : Employee.Department.Name)</h4>
                <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
            </div>

                @if ( @CssClass == null )
                {
                <div class="card-footer text-center">
                    <a href="/" class="btn btn-primary m-1">Back</a>
                    <a href="@($"editemployee/{Employee.Id}")" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
                }
        </div>
    </div>
</div>
}
